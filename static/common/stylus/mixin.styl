// 背景图片
bg-image($url)
  background-image: url("./assets/" + $url + ".png")
  background-size cover
  background-repeat no-repeat

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

button-bg()
  background -webkit-linear-gradient(top, #56ccf2, #539df0)

.clearfix:after
  content ""
  display block
  clear both


        
